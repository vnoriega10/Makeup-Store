---
import Layout from "../layouts/Layout.astro";


---

<Layout title="Checkout">
    <div class=" text-center text-zinc-900 font-bold text-2xl py-3">
        <h1>Información de facturación</h1>
    </div>

    <div class="flex items-center justify-center py-2">

        <div class="w-full max-w-md h-screen">
            <form id="myForm" class="bg-zinc-100 shadow-sm rounded-md px-8 py-5 mb-4">
                <div class="grid md:grid-cols-2 md:gap-3" >
                    <div >
                        <label for="name" class="text-zinc-900 text-sm font-semibold block mb-2">Nombre completo</label>
                        <input name="name" id="name" minlength="1" maxlength="25" class="appearance-none border border-zinc-300 rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-none" type="text" required>
                    </div>
                    <div>
                        <label for="tel" class="text-zinc-900 text-sm font-semibold block mb-2">Número de teléfono</label>
                        <input name="tel" id="tel" class="appearance-none border border-zinc-300 rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-none" type="tel" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" minlength="1" maxlength="10" required/>
                    </div>
                    <div >
                        <label for="city" class="text-zinc-900 text-sm font-semibold block mb-2">Ciudad</label>
                        <input name="city" id="city" minlength="1" maxlength="25" class="appearance-none border border-zinc-300 rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-none" type="text" required>
                    </div>
                    <div class="mb-4">
                        <label for="address" class="text-zinc-900 text-sm font-semibold block mb-2">Dirección</label>
                        <input name="address" id="address" class="appearance-none border border-zinc-300 rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-none" type="text" required>
                    </div>
                </div>
                <button type="button" id="submitButton" class="bg-[#9c6550] text-white py-3 px-2 w-full rounded-md hover:scale-105 hover:bg-[#b17863] transitio">Confirmar compra</button>
            </form>

        </div>
    </div>
    <script is:inline>
        document.getElementById("submitButton").addEventListener("click", function() {
            // Obtener los valores del formulario
            const name = document.getElementById("name").value;
            const tel = document.getElementById("tel").value;
            const city = document.getElementById("city").value;
            const address = document.getElementById("address").value;
    
            // Construir la URL de WhatsApp con los valores del formulario
            const whatsappURL = `https://wa.me/573006046165?text=Nombre:%20${name}%0A%20Teléfono:%20${tel}%0A%20Ciudad:%20${city}%0A%20Dirección:%20${address}`;
    
            // Redirigir a la URL de WhatsApp
            window.location.href = whatsappURL;
        });
    </script>

</Layout>